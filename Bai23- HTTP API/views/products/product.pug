extends ../layouts/common.pug
block content
    h1 Products
    form(action="/products", method="GET" ,class="d-flex")
        .input-group.mb-3
            input.form-control(type='text', placeholder="Search...", aria-label="Search", aria-describedby='button-addon2',name="q")
            .input-group-append
                button.btn.btn-warning Search
    p Có #{products.length} sản phẩm
    .row
        if products
            each product in products
                .col.mb-3
                    .card(style='width: 15rem;')
                        img.card-img-top(src=product.image)
                        .card-body
                            h5.card-title= product.name
                            p.card-text= product.description
                            a.btn.btn-primary(href='/card/add/'+product.id) Add to card
        
