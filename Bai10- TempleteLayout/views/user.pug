html
    head
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
    body
        div(class="container")
            h1 Thông tin USER
            form(action="/", method="GET")
                label(for="q") Tìm kiếm: &nbsp;
                input(type="text", name="q")
                button Search
            ul
            each user in users
                li
                span= user.name
                span &nbsp;
                a(href="#") View
                span &nbsp;
                a(href="#") Delete
            hr
            div
                a(href="/add") Thêm User